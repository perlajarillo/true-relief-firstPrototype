    <script type="text/javascript">
    $(document).ready(function(){
       //reviewing if the patient had tried medication  
        $(".medicationYes").click(function(){
                $("#medication_div").show();
            //    $("#medication_question_div").hide();
        });
        $(".medicationNo").click(function(){
                $("#medication_div").hide();
                 $("#procedure_question_div").show();
             //    $("#medication_question_div").hide();
        });
        //reviewing if the patient had tried procedures  
        $(".procedureYes").click(function(){
                $("#procedures_div").show();
             //   $("#medication_question_div").hide();
        });
        $(".procedureNo").click(function(){
                 $("#procedures_div").hide();
                 $("#non_pharmac_question_div").show();
        });
        //reviewing if the patient had tried non-pharmacological  
        $(".non_pharmacYes").click(function(){
                $("#non_pharmac_div").show();
             //   $("#medication_question_div").hide();
        });
        $(".non_pharmacNo").click(function(){
                 $("#non_pharmac_div").hide();
                 $("#buttons_div").show();
        });
        //Actions after the patient chooses medication
        $("#medication").change(function() {
            $("#how_medication_worked_lbl").text("Have did "+$("#medication option:selected").text()+" work? *");
            $("#how_medication_worked_div").show();
        });  
         $("#how_medication_worked").change(function() {
            $("#procedure_question_div").show();
        });  
        //Actions after the patient chooses procedure
         $("#procedure").change(function() {
            $("#how_procedure_worked_lbl").text("Have did "+$("#procedure option:selected").text()+" work? *");
            $("#how_procedure_worked_div").show();
        }); 
        $("#how_procedure_worked").change(function() {
            $("#non_pharmac_question_div").show();
        }); 
        //Actions after the patient chooses non-pharmacological
        $("#non_pharmac").change(function() {
            $("#how_non_pharmac_worked_lbl").text("Have did "+$("#non_pharmac option:selected").text()+" work? *");
            $("#how_non_pharmac_worked_div").show();
        });
        $("#how_non_pharmac_worked").change(function() {
            $("#buttons_div").show();
        });
        //Actions when the patient choose its pain condition
        $("#pain_condition").change(function() {
            $("#how_long_lbl").text("How long have you had "+$("#pain_condition option:selected").text()+"? *");
            $("#medication_lbl").text("Have you tried some medication for "+$("#pain_condition option:selected").text()+"? *");
            $("#procedure_lbl").text("Have you tried any procedures for "+$("#pain_condition option:selected").text()+"? *");
            $("#non_pharmac_lbl").text("Have you tried any non-pharmacological treatments for "+$("#pain_condition option:selected").text()+"? *");
            $("#how_it_worked_div").show();
            $("#medication_question_div").show();
            });  
   //Validating everythig is correct before sending the form
 $("form").submit(function(){

    var atLeastOneIsChecked = $('input:checked').length > 0;
    if (!atLeastOneIsChecked)
    {
        $("#preferencesMsg").text("Please select at least one option!");
        return false;
    }
    else
    {
        $("#preferencesMsg").text("");
         return true;
    }
 });

  });
   
